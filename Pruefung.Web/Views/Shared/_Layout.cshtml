<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - On-line testing system</title>
    <link href="@Url.Content(Styles.Site)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content(Styles.Bootstrap)" rel="stylesheet" type="text/css" />
    <link href="@Url.Content(Styles.BootstrapUI)" rel="stylesheet" type="text/css" />

    <script src="@Url.Content(Scripts.Modernizr)"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pruefung", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pruefung</p>
        </footer>
    </div>

    <script src="@Url.Content(Scripts.JQuery)"></script>
    @foreach (var s in Scripts.Angular)
    {
        <script src="@Url.Content(s)"></script>
    }
    <script src="@Url.Content(Scripts.Bootstrap)"></script>
    <script src="@Url.Content(Scripts.AngularUI)"></script>
    @RenderSection("Scripts", false)
    <ul id="menu">
        <li>@Html.ActionLink("To admin page", "Admin", "Home")</li>
    </ul>
</body>
</html>